{{#> layouts/base title="Cosmos | Speakers" url-prefix="./index.html"}}

{{#*inline "head-block"}}
<link rel="stylesheet" href="css/speakersPage.css">
{{/inline}}

{{#*inline "content-block"}}

<div id="speakers" class="section-speakers">
    <div class="bg"></div>
    <div class="stars
                d-none d-md-block"></div>

    <div class="m-planet-blue
                d-block d-xxl-none"></div>
    <div class="m-planet-purple
                d-block d-xxl-none"></div>

    <div class="container
                text-center
                pt-16 pb-0">
        <div class="mx-auto col-12 cl-md-8">
            <p class="h2 Titillium-Rg">The Cosmos Voyagers</p>
            <p class="h5 Titillium-Lt mt-6">
                Share your story of knowledge engineering intelligent systems with the community.
                <br class="d-none d-sm-block" />
                Share your challenges, your solutions, your innovations, and your lessons.
                <br class="d-none d-sm-block" />
                Let us celebrate your achievements with you and tell the universe about it.
            </p>
            <div class="row
                        py-8">
                <ul id="speakers-list" class="w-100 d-flex flex-wrap align-items-center justify-content-center">
                    <!-- speakers are inserted here by speakers.js -->
                </ul>

                <div class="planet-blue
                            d-none d-xxl-block"></div>
                <div class="planet-purple
                            d-none d-xxl-block"></div>
            </div>

        </div>
    </div>

    <div class="divider pb-10 pt-11"></div>
</div>


