{{#> layouts/empty title="Grakn Cosmos" url-prefix="" }}

{{#*inline "head-block"}}
<link rel="stylesheet" href="css/thankyouPage.css?v=9">
{{/inline}}

{{#*inline "content-block"}}
<div class='go-back-block'>
    <p id="title" class="title h2 Titillium-Md mb-3">We'll get in touch soon!</p>
    <p id="subtitle" class="message h4 Titillium-Rg mb-4">Hope to see you at Grakn Cosmos.</p>
    <a class="button Titillium-Md" href="./">Back to Grakn Cosmos</a>
</div>
{{/inline}}

{{#*inline "scripts-block"}}
<script>
    $(document).ready(function () {
        $('body').addClass('spaceship');

        const source = new URL(window.location.href).searchParams.get('form-source');
        
        if (source === "student-success") {
            $('#title').html("Check your inbox for your free ticket!");
            $('#subtitle').html("Hope to see you at Grakn Cosmos.");
        } else if ( source === "student-failure") {
            $('#title').html("Something went wrong!");
            $('#subtitle').html("We'll in get in touch soon.");
        }
    });
</script>
{{/inline}}

{{/layouts/empty}}